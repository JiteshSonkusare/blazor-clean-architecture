@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> localizer

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Elevation="25" Style="border: 0;">
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudText Typo="Typo.h6" Class="ml-4">@localizer["TitleName"]</MudText>
        </MudHidden>
        <MudSpacer />
        <MudText Typo="Typo.caption" Color="Color.Inherit">@_language</MudText>
        <LanguageSelector />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="25">
        <MudDrawerHeader Style="background: linear-gradient(to right, #1b2330 0%, #252f3e 100%); height:65px;">
            <img src="images/cfalogo.svg" Style="width:150px;height:40px;" />
        </MudDrawerHeader>
        <NavMenu />
        <MudSpacer />
        <MudTFootRow>
            <MudAlert Style="margin-bottom:10px; color:white; font-size:smaller;" Icon="@Icons.Rounded.Copyright">@localizer["Copyright"] 2021</MudAlert>
        </MudTFootRow>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
